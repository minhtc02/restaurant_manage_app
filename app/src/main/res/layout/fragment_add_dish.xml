<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frg_add_dish"
    tools:context=".Fragment.AddDishFragment"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Nhập thông tin"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên món ăn"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/edDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/edVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đánh giá"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/edPrice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Giá tiền"
    android:layout_marginTop="15dp"
    />
    <EditText
        android:id="@+id/edImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ảnh minh họa"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF4D00"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay Lại"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#7CB342"
        />





</LinearLayout>