<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/fg_vif"
    tools:context=".Fragment.ViewDetailFragment">


    <ImageView
        android:id="@+id/imgDish"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Gà nướng chấm chẩm chéo đặc sản Tây Bắc"
        android:textSize="30dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="350dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:text="Đánh giá:"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="491dp" />

        <TextView
            android:id="@+id/tvVote"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="491dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="491dp"
            android:src="@drawable/sss" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:text="200000"
            android:textColor="#00C62B"
            android:textSize="22dp"
            android:layout_marginLeft="155dp"
            tools:layout_editor_absoluteX="322dp"
            tools:layout_editor_absoluteY="491dp" />
    </LinearLayout>



    <TextView
        android:id="@+id/tvDescribe"
        android:layout_width="385dp"
        android:layout_height="127dp"
        android:textColor="@color/black"
        android:text="Nguyên liệu: Gà 1,8 kg, muối, mắc khén, hạt dổi, ớt, chanh, rau mùi, rau xà lách"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="535dp"
        />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:backgroundTint="#FF4D00"
        android:text="Thêm vào giở hàng"
         />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:backgroundTint="#7CB342"
        android:text="Quay Lại"
        />
</LinearLayout>